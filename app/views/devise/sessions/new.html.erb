<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info" >
     <div class="panel-heading">
        <div class="panel-title">SignIn Testing Auto Deploy</div>
        <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#"><%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
       <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
      <% end -%></a></div>
     </div>
     <div style="padding-top:30px" class="panel-body" >
        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
        
          <%= form_for(resource, as: resource_name, :id=>"loginform", :class=>"form-horizontal", :role=>"form", url: session_path(resource_name)) do |f| %>

          <%= devise_error_messages! %>
          <% flash.each do |key, value| %>
            <% if(value != "Signed out successfully.") %>
              <div class="flash alert alert-warning <%= key %>"><%= value %></div>
            <% end%>
          <% end %>

           <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
              <%= f.email_field :email, required: false, autofocus: true, :class=>"form-control " , :placeholder=>"email"%>                                        
           </div>
           <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i></span>
              <%= f.password_field :password, required: false, :class=>"form-control ", :placeholder=>"password"  %>
           </div>
           <div class="input-group">
              <div class="checkbox">
                 <label>
                 <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                 </label>
              </div>
           </div>
           <div style="margin-top:10px" class="form-group">
              <!-- Button -->
              
              <div class="col-sm-12 controls">
                <button id="btn-signup" type="submit" class="btn btn-info event_buy_btn lc_js_link login"><i class="icon-hand-right"></i> &nbsp Login</button>
                   
                <a id="btn-fblogin" href="/auth/twitter" class="btn btn-primary event_buy_btn lc_js_link facebook_login">Login with Twitter</a>
                
                <a id="btn-fblogin" href="/auth/facebook" class="btn btn-primary event_buy_btn lc_js_link facebook_login">Login with Facebook</a>
                 
              </div><br><br>
           </div>
           <div class="form-group">
              <div class="col-md-12 control">
                 <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                    Don't have an account! 
                    <a href="/users/sign_up" onClick="$('#loginbox').hide(); $('#signupbox').show()">
                    Sign Up Here
                    </a>
                 </div>
              </div>
           </div>
        <%end %>
     </div>
  </div>
</div>
